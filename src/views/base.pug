doctype html
html(lang='en')
    head
        title #{pageTitle} | Etube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            if fakeUser.loggedIn
                small Hello #{fakeUser.name}        
            nav
                    ul      
                        if fakeUser.loggedIn
                            li 
                                a(href="/logout") Logout
                        else
                            li
                                a(href="/login") Login
                        li
                            a(href="/video/upload") Upload

            h1=pageTitle
        main
            block content
    include partials/footer.pug 
